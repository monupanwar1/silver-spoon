{
  "name": "silverspoon-2",
  "version": "1.5.1",
  "private": true,
  "license": "MIT",
 "scripts": {
  "build": "turbo build",
  "dev": "turbo dev",
  "lint": "turbo lint",
  "format": "prettier --write \"**/*.{ts,tsx,md}\"",
  "ui": "pnpm --filter @repo/ui ui",
  "add:ui": "pnpm --filter @repo/ui run add",       
  "dev:user": "pnpm --filter user dev",
  "dev:docs": "pnpm --filter docs dev"  
},

  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "catalog:",
    "turbo": "2.5.6"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  }
}
